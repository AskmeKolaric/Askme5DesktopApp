<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TachografReaderUI.controller.DataViewController">
    <center>
        <VBox alignment="CENTER">
            <spacing>30</spacing>
            <Label fx:id="text" id="login-label" text="Očitajte vašu karticu">
            </Label>
            <ProgressBar fx:id="bar" progress="0.18" minWidth="600" />
            <Button onAction="#testSendFile"  fx:id="dugme" text="Go..Go..Go..&gt;" >
            </Button>
            <TextField fx:id="textField" alignment="CENTER" editable="false">
                <padding>
                    <Insets top="20" bottom="20" left="100" right="100" />
                </padding>
            </TextField>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="5">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>
            <Button onAction="#logout" text="Log Out" />
        </HBox>
    </bottom>
</BorderPane>
